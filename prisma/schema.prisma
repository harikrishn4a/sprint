generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  email              String    @unique
  name               String?
  githubId           String    @unique
  avatarUrl          String?
  githubToken        String?
  accessTokenExpires DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  projects Project[]
  standups Standup[]
  sessions StandupSession[]
  streak   UserStreak?
}

model Project {
  id            Int       @id @default(autoincrement())
  userId        Int
  title         String
  description   String
  durationWeeks Int
  planJson      Json
  repoOwner     String?
  repoName      String?
  defaultBranch String?
  lastCommitSha String?
  publicSlug    String?   @unique
  isPublic      Boolean   @default(false)
  publishedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user     User             @relation(fields: [userId], references: [id])
  standups Standup[]
  sessions StandupSession[]
}

model Standup {
  id              Int      @id @default(autoincrement())
  userId          Int
  projectId       Int
  date            DateTime
  commitSummary   Json
  summary         String
  codeFeedback    String
  planForToday    Json
  advice          String?
  answersJson     Json?
  durationSeconds Int?
  createdAt       DateTime @default(now())
  voiceSessionId  Int?     @unique

  user    User            @relation(fields: [userId], references: [id])
  project Project         @relation(fields: [projectId], references: [id])
  session StandupSession? @relation(fields: [voiceSessionId], references: [id])

  @@unique([projectId, date])
}

model UserStreak {
  userId         Int       @id
  currentStreak  Int       @default(0)
  longestStreak  Int       @default(0)
  lastActiveDate DateTime?

  user User @relation(fields: [userId], references: [id])
}

model StandupSession {
  id                Int                  @id @default(autoincrement())
  userId            Int
  projectId         Int
  status            StandupSessionStatus @default(PREPARING)
  planSnapshot      Json
  commitSummary     Json
  smartPrompts      Json?
  voiceSessionToken String?              @unique
  createdAt         DateTime             @default(now())
  startedAt         DateTime?
  endedAt           DateTime?

  user    User     @relation(fields: [userId], references: [id])
  project Project  @relation(fields: [projectId], references: [id])
  standup Standup?
}

enum StandupSessionStatus {
  PREPARING
  ACTIVE
  COMPLETED
  ERROR
}
